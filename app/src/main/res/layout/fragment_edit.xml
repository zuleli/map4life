<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.compuways.keywordsmanager.EditFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/editText"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:background="#f2f9f9"
        android:layout_marginTop="3dp"
        android:hint="Put New Keyword Here" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/btnSelectionAddText"
            android:id="@+id/btnAdd"
            android:layout_weight="0.65" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Delete Keyword:"
            android:id="@+id/textView2"
            android:layout_weight="0.3"
            android:layout_gravity="right"
            android:gravity="center_vertical|right" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvSource" />
    </LinearLayout>

</LinearLayout>
