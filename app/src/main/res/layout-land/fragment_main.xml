<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.compuways.keywordsmanager.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/abc_search_url_text_normal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="#e8f8f3"
        android:layout_weight="0.64">

        <TextView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:text="@string/selectasite"
            android:id="@+id/messagView"
            android:background="@color/highlighted_text_material_dark"
            android:textSize="15sp"
            android:textIsSelectable="false"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:singleLine="false"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal|fill_vertical" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvwSelections"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:elevation="@dimen/elevation"
            android:layout_margin="0dp"
            android:focusable="false"
            android:background="#d8f4f5" />

    </LinearLayout>

</LinearLayout>